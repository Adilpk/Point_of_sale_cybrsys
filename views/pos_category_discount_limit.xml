<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_discount_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <block title="Category Discount limit">
                    <setting help="Set a maximum category wise limit" string="Category limit">
                        <field name="pos_discount_availability"/>
                        <div class="content-group mt16" invisible="not pos_discount_availability">
                            <field name="pos_limit_categ_ids" widget="many2many_tags"/>
                        </div>
                        <div class="content-group mt16"
                             invisible="not pos_discount_availability">
                            <label for="pos_discount_limit" string="Discount Limit"
                                   class="fw-normal"/>
                            <field name="pos_discount_limit"/>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>